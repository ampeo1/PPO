<?xml version="1.0" encoding="utf-8"?>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3">

        <Button android:id="@+id/button1" style="@style/KeyboardButton" android:text="1"/>
        <Button android:id="@+id/button2" style="@style/KeyboardButton" android:text="2"/>
        <Button android:id="@+id/button3" style="@style/KeyboardButton" android:text="3"/>
        <Button android:id="@+id/button4" style="@style/KeyboardButton" android:text="4"/>
        <Button android:id="@+id/button5" style="@style/KeyboardButton" android:text="5"/>
        <Button android:id="@+id/button6" style="@style/KeyboardButton" android:text="6"/>
        <Button android:id="@+id/button7" style="@style/KeyboardButton" android:text="7"/>
        <Button android:id="@+id/button8" style="@style/KeyboardButton" android:text="8"/>
        <Button android:id="@+id/button9" style="@style/KeyboardButton" android:text="9"/>
        <Button android:id="@+id/buttonDot" style="@style/KeyboardButton" android:text="."/>
        <Button android:id="@+id/button0" style="@style/KeyboardButton" android:text="0"/>
        <Button android:id="@+id/buttonDel" style="@style/KeyboardButton" android:text="C"/>
    </GridLayout>

