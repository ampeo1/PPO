<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingPage.SettingActivity"/>

        <service
            android:name=".Service.TimerService"
            android:enabled="true" />

        <activity android:name=".AddCategoryPage.AddCategoryActivity" />
        <activity android:name=".AddSequencePage.AddSequenceActivity" />
        <activity android:name=".SequencePage.SequenceActivity" />
        <activity android:name=".MainActivity"/>
    </application>

</manifest>